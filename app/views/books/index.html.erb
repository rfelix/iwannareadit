<%= link_to "Suggest a Book", new_book_path %>

<table id="books_list">
  <tr>
    <th> Votes   </th>
    <th> Book    </th>
    <th> Authors </th>
    <th> Actions </th>
  </tr>
  <% @books.each_with_index do |book, index| %>
    <tr id="item<%= index + 1 %>">
      <td><%= Vote.count_for book                 %></td>
      <td><%= link_to book.name, book_path(book)  %></td>
      <td><%= book.authors                        %></td>
      <td><%=                                     %></td>
    </tr>
  <% end %>
</table>
