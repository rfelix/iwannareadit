<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <% if signed_in? %>
    <div>
      User: <%= current_user.name %> (<%= link_to "Logout", logout_path %>)
    </div>

    <div id="navigation">
      |
      <%= link_to "Suggested Books", books_path %>
      |
      <%= link_to "Bought Books", bought_books_path %>
      |
      <% if is_admin? %>
        <%= link_to "Users", users_path %>
        |
      <% end %>
    </div>
  <% end %>

  <% flash.each do |key, value| %>
    <div class='flash' id='<%= key %>'>
      <%= value %>
    </div>
  <% end %>

<%= yield %>

</body>
</html>
