<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="container_12">
    <% if signed_in? %>
      <div id="topbar" class="grid_12 left">
        <div class="grid_4">
          Hello, <%= current_user.name %> (<%= link_to "Logout", logout_path %>)
        </div>
        <div class="prefix_6 right">
          <% if is_admin? %>
            <%= link_to "User Administration", users_path %>
          <% end %>
        </div>

      </div>

      <div id="navigation">
        <%= link_to "Suggested Books", books_path %>
        |
        <%= link_to "Bought Books", bought_books_path %>
        |
        <%= link_to "My Reservations", reservations_path %>
      </div>
    <% end %>

    <% flash.each do |key, value| %>
      <div class='flash' id='<%= key %>'>
        <%= value %>
      </div>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
